<h1>Sign in</h1>

<p id="notice"><%= notice %></p>

<%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :username, "Username" %>
      <%= text_field_tag :username, params[:username] %>
    </div>

    <div class="field">
        <%= label_tag :password, "Password" %>
        <%= password_field_tag :password, params[:password] %>
    </div>

    <div class="submit">
      <%= submit_tag "Log in" %>
    </div>

<%end%>

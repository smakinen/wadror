<h2><%= @style.name %></h2>

<% if @style.description %>
    <p><%=@style.description%></p>
<%else%>
    <p>No description for the beer style</p>
<%end%>

<p><strong>Beers</strong></p>

<% if not @style.beers.empty? %>
    <ul>
      <% @style.beers.each do |beer|%>
        <li><%= link_to beer.name, beer %> by
            <%= link_to beer.brewery.name, beer.brewery %></li>
      <% end %>
    </ul>
<%else%>
    <p>No beers found for this style</p>
<%end%>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer_club.name %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<h2>Club Members</h2>

<div id="club_members">
  <ul>
    <% @beer_club.memberships.each do |membership| %>
        <li><%= membership.user.username %></li>
    <% end %>
  </ul>
</div>

<% if current_user and not current_user.beer_clubs.include?(@beer_club) %>
    <%= form_for (@membership) do |form| %>
        <%= form.hidden_field :beer_club_id %>
        <%= form.submit value:"Join #{@beer_club.name}" %>
    <% end %>
<% end %>

<% if administrator %>
    <p><%= link_to 'Edit', edit_beer_club_path(@beer_club) if current_user %> |
    <%= link_to 'Destroy', @beer_club, method: :delete, data: {confirm: 'Are you sure?'} if current_user%></p>
<% end %>

<p><%= link_to 'Back', beer_clubs_path %></p>
